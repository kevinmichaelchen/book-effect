{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": []
  },
  "nxCloudId": "69285220500649676dea5bdd",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": false,
        "build": false
      }
    }
  ],
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "pnpm exec tsdown",
        "cwd": "{projectRoot}"
      },
      "cache": true
    }
  },
  "release": {
    "version": {
      "conventionalCommits": true
    },
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github"
      }
    }
  }
}
